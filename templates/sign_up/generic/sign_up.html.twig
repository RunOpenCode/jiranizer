{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row">

            <div class="col-md-4 col-md-offset-4">

                <div class="login-panel panel panel-default">

                    <div class="panel-heading">
                        <h3 class="panel-title">{{ 'signup.title'|trans }}</h3>
                    </div>

                    <div class="panel-body">

                        {{ form_start(form) }}
                        {{ form_errors(form) }}

                        <fieldset>

                            <div class="form-group">
                                {{ form_widget(form.username, { attr: { placeholder: 'signup.placeholder.username'|trans, class: 'form-control' } }) }}
                                {{ form_errors(form.username) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.email, { attr: { placeholder: 'signup.placeholder.email'|trans, class: 'form-control' } }) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.password.first, { attr: {placeholder:'signup.placeholder.password'|trans, class: 'form-control' } }) }}
                                {{ form_errors(form.password.first) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.password.second, { attr: {placeholder:'signup.placeholder.passwordRepeat'|trans, class: 'form-control' } }) }}
                                {{ form_errors(form.password.second) }}
                            </div>

                            <div class="form-group">
                                {{ form_widget(form.photo, { attr: { class: 'form-control' } }) }}
                                {{ form_errors(form.photo) }}
                            </div>

                            <button type="submit" class="text-uppercase btn btn-primary btn-block btn-lg" formnovalidate>
                                {{ 'signup.submit'|trans }}
                            </button>

                        </fieldset>

                        {{ form_rest(form) }}
                        {{ form_end(form) }}

                    </div>

                </div>

            </div>

        </div>

    </div>

{% endblock body %}
